# ==================== AI MODEL API KEYS ====================
# Get Gemini API key: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get OpenAI API key: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Get Anthropic API key: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==================== EMAIL CONFIGURATION ====================
# Email provider: gmail, outlook, yahoo, sendgrid, smtp
EMAIL_PROVIDER=gmail

# SMTP Settings (if using custom SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# Sender credentials (for Gmail use App Password)
# Gmail App Password: https://support.google.com/accounts/answer/185833
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password_here
SENDER_NAME=AI Intelligence Hub

# Recipients
RECIPIENT_EMAIL=recipient@example.com
TEST_RECIPIENT_EMAIL=test@example.com
CC_RECIPIENTS=cc1@example.com,cc2@example.com

# Email features
EMAIL_HTML=true
EMAIL_ATTACH_AUDIO=false
EMAIL_SUBJECT_PREFIX=AI Intelligence Briefing

# Failure notifications
NOTIFY_ON_FAILURE=true
FAILURE_NOTIFICATION_EMAIL=admin@example.com

# ==================== NEWS SOURCE CONFIGURATION ====================
# Source profile: academic, industry, news, balanced, comprehensive, quick
FEED_PROFILE=balanced

# Article limits
MAX_ARTICLES=100
MAX_ARTICLES_TO_ANALYZE=30
FEED_MAX_PER_DOMAIN=5

# Time window (hours)
LOOKBACK_HOURS=24
FEED_LOOKBACK_HOURS=24

# Content filtering
MIN_ARTICLE_LENGTH=100
EXCLUDE_KEYWORDS=advertisement,sponsored
CONTENT_LANGUAGE=en

# Custom news sources (comma-separated RSS URLs)
CUSTOM_NEWS_SOURCES=https://example.com/feed.xml,https://another.com/rss

# ==================== REAL-TIME SEARCH ====================
# Enable real-time search (DuckDuckGo)
ENABLE_REALTIME_SEARCH=true
REALTIME_MAX_RESULTS=10

# Optional: News API (https://newsapi.org/)
NEWSAPI_KEY=your_newsapi_key_here

# Optional: SerpAPI (https://serpapi.com/)
SERPAPI_KEY=your_serpapi_key_here

# Optional: Bing News API
BING_NEWS_KEY=your_bing_news_key_here

# ==================== CACHING CONFIGURATION ====================
ENABLE_CACHING=true
CACHE_TTL=1800
CACHE_MAX_SIZE=100

# ==================== AUDIO GENERATION ====================
ENABLE_AUDIO=false

# TTS Engine: auto, gtts, edge, pyttsx3, elevenlabs
TTS_ENGINE=auto

# Voice settings
VOICE_LANGUAGE=en
VOICE_GENDER=female
SPEECH_RATE=1.0
AUDIO_FORMAT=mp3

# ElevenLabs (premium TTS): https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Output directory
AUDIO_OUTPUT_DIR=./audio

# ==================== SUMMARIZATION ====================
USE_AI_SUMMARIZATION=true
SUMMARY_LENGTH=medium
MIN_SUMMARY_LENGTH=50
MIN_RELEVANCE_SCORE=0.6

# ==================== OUTPUT CONFIGURATION ====================
# Enable/disable features
ENABLE_EMAIL=true
ENABLE_FILE_EXPORT=true

# Export settings
EXPORT_DIR=exports
EXPORT_FORMAT=markdown
SAVE_METADATA=true

# Output directory
OUTPUT_DIR=output

# ==================== EXECUTION SETTINGS ====================
# Dry run mode (no emails sent)
DRY_RUN=false

# Verbose logging
VERBOSE=true

# Error handling
CONTINUE_ON_ERROR=true
MAX_RETRIES=3
RETRY_DELAY_MINUTES=30

# ==================== SCHEDULING CONFIGURATION ====================
# Enable scheduled execution
SCHEDULE_ENABLED=true

# Schedule time (HH:MM format, 24-hour)
SCHEDULE_TIME=08:00

# Multiple times (comma-separated)
SCHEDULE_TIMES=08:00,17:00

# Days to run (comma-separated)
SCHEDULE_DAYS=monday,tuesday,wednesday,thursday,friday

# Timezone (e.g., UTC, America/New_York, Europe/London, Asia/Tokyo)
SCHEDULE_TIMEZONE=UTC

# Weekend schedule
WEEKEND_ENABLED=false
WEEKEND_TIME=10:00

# Retry on failure
RETRY_ON_FAILURE=true

# Health check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_HOURS=1

# ==================== PROFILE ROTATION ====================
# Different profiles for different days
PROFILE_ROTATION_ENABLED=false
MONDAY_PROFILE=balanced
TUESDAY_PROFILE=industry
WEDNESDAY_PROFILE=academic
THURSDAY_PROFILE=comprehensive
FRIDAY_PROFILE=balanced
SATURDAY_PROFILE=quick
SUNDAY_PROFILE=quick

# ==================== ANALYSIS CONFIGURATION ====================
# Number of top stories to select
TOP_STORIES_COUNT=5

# Enable deep analysis
ENABLE_DEEP_ANALYSIS=true

# ==================== LOGGING ====================
LOGS_DIR=logs
LOG_LEVEL=INFO

# ==================== ADVANCED FEATURES ====================
# Enable experimental features
ENABLE_SENTIMENT_ANALYSIS=false
ENABLE_TREND_DETECTION=false
ENABLE_TOPIC_CLUSTERING=false

# Performance
MAX_WORKERS=5
PARALLEL_PROCESSING=false

# ==================== MONITORING (OPTIONAL) ====================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Prometheus metrics
ENABLE_METRICS=false
METRICS_PORT=9090